<div class="login-page">
    <div class="form-header">
        <h1>Sign In</h1>
    </div>
    <form class="login">
    <div class="form-section">
                <label for="username">Username</label>
                <input id="username-input" class="form-section" name="username" type="text" autocomplete="username" required autofocus/>
    </div>
    <div class="form-section">
                <label for="current-password">Password</label>
                <input id="password-input" class="form-section" name="password" type="password" autocomplete="current-password" required/>
    </div>
            <button type="submit">Sign in</button>
        </form>
        </br>
        <p>Or Sign Up <a href="/signup">here</a></p>
    </div>