<article class="book">
    <div class="whole-book">
        <div class="book-info">
            <div class="img">
                <img src="{{thumbnail}}">
            </div>
            <div class="book-name">
                <a href="/book/{{id}}" class="links">{{title}}</a>
            </div>
            <div class="created-by">
                <p id="book-subtitle">
                Written by <b>{{authors}} </b> on <b>{{published_year}}</b>
                </p>
            </div>
            <div class="count">
                <p>
                    Page count: <b>{{num_pages}}</b>
                </p>
            </div>
        </div>
        <div class="description">
            <p>{{description}}</p>
        </div>
    </div>
</article>